let NODE_JS = 1;
let JS_SHELL = 2;
let BROWSER = 3;

let enable_memcheck = false;

let mode;
if (typeof process !== "undefined") {
  mode = NODE_JS;
} else if (typeof snarf !== "undefined") {
  mode = JS_SHELL;
} else {
  mode = BROWSER;
}

let ck;
if (mode === NODE_JS) {
  print = console.log;
  ck = require('memcheck');
} else if (mode === JS_SHELL) {
  ck = (load('memcheck.js'), memcheck);
} else {
  ck = memcheck;
}


const MB = 1024 * 1024;
const WORD_SIZE = sizeof(word);
const SIZE = (32 * MB) / WORD_SIZE;
const STACK_SIZE = (2 * MB) / WORD_SIZE;
const HEAP_SIZE = SIZE - STACK_SIZE;

// debug
let log = function() { };

